<UserControl x:Class="Recentsmodule"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InventoryManagement"
             mc:Ignorable="d" Height="125" Width="254" Foreground="{x:Null}" BorderBrush="Red">
  
    <Border BorderBrush="White" BorderThickness="0.7" CornerRadius="10" Background="#FF05203B">
    <Grid>
<Button x:Name="mainbuttonuc" Background="{x:Null}" BorderBrush="#FFA74F4F" Click="Button_Click" Foreground="#FFDA0000" HorizontalAlignment="Left" VerticalAlignment="Top" Width="39" Height="25" IsHitTestVisible="True"  Panel.ZIndex="10" />
        <Label x:Name="RefNumberlbl" Content="RefNumber" HorizontalAlignment="Right" HorizontalContentAlignment="Right" VerticalAlignment="Top" FontFamily="Global Monospace" FontSize="18" Height="NaN" Width="254" Background="{x:Null}" Foreground="#FFEFBC0A" FontWeight="Bold"/>
        <Label x:Name="customernmlbl" Content="Customer Name" HorizontalAlignment="Center" VerticalAlignment="Top" FontFamily="Global Monospace" FontSize="18" Height="NaN" Width="254" Foreground="#FFF7F7F7" Margin="0,61,0,0" FontWeight="Bold"/>
        <Label x:Name="Amountlbl" Content="amountlbl" HorizontalAlignment="Center" Margin="0,93,0,0" VerticalAlignment="Top" FontFamily="Global Monospace" FontSize="18" Foreground="#FFBDA81D" Width="254" FontWeight="Bold"/>
        <Label x:Name="date" Content="datew" HorizontalAlignment="Left" HorizontalContentAlignment="Left" VerticalAlignment="Top" FontFamily="Global Monospace" FontSize="16" Height="NaN" Width="254" Margin="0,32,0,0" Background="{x:Null}" Foreground="#FFF9B1B1" FontWeight="Bold"/>
    </Grid>
    </Border>
</UserControl>
