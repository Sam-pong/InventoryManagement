<Window x:Class="NewTag"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InventoryManagement" xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="New Tag" Height="200" Width="400"  ShowInTaskbar="False" WindowStyle="None"
                             AllowsTransparency="True"
         ResizeMode="NoResize" WindowStartupLocation="CenterScreen"     >
    <Window.Resources>
        <Style x:Key="HoverButtonStyleNT" TargetType="Button">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="OverridesDefaultStyle" Value="True" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="Red"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="OverridesDefaultStyle" Value="True" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}">
                                    <ContentPresenter 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>

                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="HoverButtonStyle2NT" TargetType="Button">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="OverridesDefaultStyle" Value="True" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="Lime"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="OverridesDefaultStyle" Value="True" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}">
                                    <ContentPresenter 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>

                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Window.Background>
        <ImageBrush ImageSource="vector-mar-2021-32_generated.jpg"/>
    </Window.Background>
    <Border BorderThickness="4" BorderBrush="#FF3A9CA0" CornerRadius="0"     >
        <Border.Background>
            <SolidColorBrush Color="#808AC4C7"/>
        </Border.Background>

        <Border.Effect>
            <DropShadowEffect/>
        </Border.Effect>
        <Grid>
            <StackPanel Height="50" Margin="0,12,0,0" VerticalAlignment="Top" Orientation="Horizontal" Background="#808AC4C7">
                <Label Content="ID" Width="146" FontFamily="Global Monospace" FontSize="20" FontWeight="Bold" VerticalContentAlignment="Center"/>

                <xctk:WatermarkTextBox x:Name="TagID" Width="245" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="BlueViolet" FontFamily="Global Monospace" FontSize="22"
                    Watermark="Error, Call Admin" SelectionTextBrush="White" Margin="0,10" IsReadOnly="True" />

            </StackPanel>
            <StackPanel Height="50" Margin="0,62,0,0" VerticalAlignment="Top" Orientation="Horizontal" Background="#808AC4C7">
                <Label Content="Tag Name" Width="141" FontFamily="Global Monospace" FontSize="20" FontWeight="Bold" VerticalContentAlignment="Center"/>

                <xctk:WatermarkTextBox x:Name="TagName" Width="245" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="Lime" FontFamily="Global Monospace" FontSize="22"
                    Watermark="[Enter Text]" SelectionTextBrush="White" Margin="0,10" />

            </StackPanel>
            <Button Content="Close" Margin="148,151,156,0" FontFamily="Global Monospace" FontSize="22" FontWeight="Bold" FontStyle="Italic" Background="{x:Null}" HorizontalAlignment="Center" RenderTransformOrigin="0.5,0.5" Click="Button_Click" Style="{StaticResource HoverButtonStyleNT}" VerticalAlignment="Top" Width="88"/>
            <Button Content="Add New Tag" Margin="101,122,111,0" FontFamily="Global Monospace" FontSize="24" FontWeight="Bold" FontStyle="Italic" Background="{x:Null}" HorizontalAlignment="Center" RenderTransformOrigin="0.5,0.5" Style="{StaticResource HoverButtonStyle2NT}" VerticalAlignment="Top" Width="180" Click="Button_Click_1"/>

        </Grid>
    </Border>
</Window>
