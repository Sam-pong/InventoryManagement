<Window x:Class="EditQuanitity"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InventoryManagement" xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
    Title="New Tag" Height="200" Width="400"  ShowInTaskbar="False" WindowStyle="None"
                         AllowsTransparency="True"
     ResizeMode="NoResize" WindowStartupLocation="CenterScreen"     >
    <Window.Resources>
        <Style x:Key="HoverButtonStyleNT" TargetType="Button">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="OverridesDefaultStyle" Value="True" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="Red"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="OverridesDefaultStyle" Value="True" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}">
                                    <ContentPresenter 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>

                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="HoverButtonStyle2NT" TargetType="Button">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="OverridesDefaultStyle" Value="True" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="Lime"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="OverridesDefaultStyle" Value="True" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}">
                                    <ContentPresenter 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>

                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Window.Background>
        <ImageBrush ImageSource="vector-mar-2021-32_generated.jpg"/>
    </Window.Background>
    <Border BorderThickness="4" BorderBrush="#FF3A9CA0" CornerRadius="0"     >
        <Border.Background>
            <SolidColorBrush Color="#808AC4C7"/>
        </Border.Background>

        <Border.Effect>
            <DropShadowEffect/>
        </Border.Effect>
        <Grid>
            <xctk:WatermarkTextBox x:Name="QuantityAdjust"  HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center" Margin="0,45,0,0" Text="1" TextWrapping="Wrap"  VerticalAlignment="Top" Width="264" FontFamily="Global Monospace" FontSize="24" Height="51" Background="#FF86C2C7" BorderBrush="{x:Null}"/>
            <Button x:Name="Enterbutton" Content="Set Quantity" HorizontalAlignment="Left" Margin="220,111,0,0" VerticalAlignment="Top" FontFamily="Global Monospace" FontSize="22" Background="{x:Null}" FontWeight="Bold"/>
            <Button Content="Cancel" Margin="294,146,0,0" FontFamily="Global Monospace" FontSize="22" FontWeight="Bold" Background="{x:Null}" HorizontalAlignment="Left" RenderTransformOrigin="0.5,0.5" Click="Button3_Click" Style="{StaticResource HoverButtonStyleNT}" VerticalAlignment="Top" Width="88" TabIndex="13"/>
            <TextBox x:Name="bakcend" HorizontalAlignment="Left" Margin="36,154,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" Visibility="Hidden"/>

        </Grid>
    </Border>

</Window>
